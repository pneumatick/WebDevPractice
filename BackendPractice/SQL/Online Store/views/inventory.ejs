<!DOCTYPE html>
<html>
    <head>
        <title>Inventory Panel</title>
    </head>

    <body>
        <h3>Create</h3>
        <form id="create-form" action="/inventory/create" method="post">
            <label for="product">Product</label>
            <input id="product" name="product" type="text">
            <label for="quantity">Quantity</label>
            <input id="quantity" name="quantity" type="number">
            <label for="price">Price</label>
            <input id="price" name="price" type="text" step="any">
            <button>Create</button>
        </form>
        <h3>Update</h3>
        <form id="update-form" action="/inventory/update" method="post">
            <label for="product">Product</label>
            <input id="product" name="product" type="text">
            <label for="quantity">Quantity</label>
            <input id="quantity" name="quantity" type="number">
            <label for="price">Price</label>
            <input id="price" name="price" type="text" step="any">
            <button>Update</button>
        </form>
        <h3>Delete</h3>
        <form id="delete-form" action="/inventory/delete" method="post">
            <label for="product">Product</label>
            <input id="product" name="product" type="text">
            <button>Delete</button>
        </form>
    </body>
</html>